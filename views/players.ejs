<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <%- include("searchPlayer.ejs") %>
    <ul>
      <% if (players.length > 0) { %> <% players.forEach(player => { %>
      <li>Player Name: <%= player %></li>
      <% }); %> <% } else { %>
      <li>No players found.</li>
      <% } %>
    </ul>
    <a href="/names/add">Add a Player</a>
    <form action="/names/delete" method="GET" style="margin-top: 20px">
      <button
        type="submit"
        onclick="return confirm('Are you sure you want to delete all players?');"
      >
        Delete All Players
      </button>
    </form>
  </body>
</html>
